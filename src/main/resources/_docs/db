/*------------------ Системные сущности  -----------------------*/

/*Пользователи системы*/
CREATE SEQUENCE sys_users_id_seq START WITH 1;

CREATE TABLE "sys_users" (
    id INTEGER NOT NULL default nextval('sys_users_id_seq'),
	login VARCHAR(120) NOT NULL,
	pass VARCHAR(32) NOT NULL
);
ALTER SEQUENCE sys_users_id_seq owned by "sys_users".id;

/*Баланс денег пользователя системы*/
